<odoo>
    <record id="macros_ingredients_category_list_view" model="ir.ui.view">
        <field name="name">macros.ingredient.category.list.view</field>
        <field name="model">macros.ingredient.category</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="macros_ingredients_category_actions" model="ir.actions.act_window">
        <field name="name">Ingredient Categories</field>
        <field name="res_model">macros.ingredient.category</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="macros_ingredients_category_list_view"/>
    </record>
</odoo>
